{
  "scripts": {
    "lint": "node_modules/.bin/markdownlint ../docs",
    "lint:spell:it": "node_modules/.bin/mdspell ../docs/*.md --ignore-numbers --ignore-acronyms --en-gb",
    "lint:spell": "node_modules/.bin/mdspell --report --en-gb --ignore-numbers --ignore-acronyms --no-suggestions ../docs/*.md",
    "validate": "node_modules/.bin/markdownlint ../docs --fix",
    "start": "docusaurus-start",
    "build": "docusaurus-build",
    "publish": "docusaurus-publish",
    "version": "docusaurus-version",
    "rename-version": "docusaurus-rename-version"
  },
  "devDependencies": {
    "docusaurus": "^1.14.4",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint": "^0.20.3",
    "markdownlint-cli": "^0.23.1"
  }
}
